{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9000
    },
    "firestore": {
      "port": 9001
    },
    "database": {
      "port": 9002
    },
    "hosting": {
      "port": 9003
    },
    "pubsub": {
      "port": 9004
    },
    "storage": {
      "port": 9005
    },
    "eventarc": {
      "port": 9006
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
